<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#f5f3f3"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp">


                <!--Linnear Like-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <!--Like-->
                    <LinearLayout
                        android:id="@+id/id_linear_dislike"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/linnear_like"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/Commint_TextDisLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:text="20"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp">

                            <ImageView
                                android:id="@+id/Id_icondisLike"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/dislike"
                                android:tint="#c4cac4" />


                            <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/progress_wheel2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:visibility="gone"
                                app:cpv_animAutostart="true"
                                app:cpv_indeterminate="true" />


                        </RelativeLayout>
                    </LinearLayout>
                    <!--disLike-->
                    <LinearLayout
                        android:id="@+id/linear_like_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/linnear_like"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/Commint_TextLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:text="20"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp">

                            <ImageView
                                android:id="@+id/Id_iconLike"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/like"
                                android:tint="#c4cac4" />


                            <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/progress_wheel1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:visibility="gone"
                                app:cpv_animAutostart="true"
                                app:cpv_indeterminate="true" />


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <!--Name User-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/Commint_TextNameUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="ناشناس"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/commint2"
                        android:tint="#c4cac4" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linnear_edama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Commint_TextNameCommint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Commint"
                        android:textColor="#c4cac4"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/Commint_TextMatnCommint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="@string/samole"
                        android:textColor="#c4cac4"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linnear_Commint_Cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/CustomComment_IDEdame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="جزئیات"
                        android:textColor="#0d187b"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/CustomComment_IDLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="#bebbbb" />

                    <LinearLayout
                        android:id="@+id/CustomComment_LinearProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CustomComment_linearPos_and_neg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/CustomComment_pos_neg_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="باتری خوب" />

                        <ImageView
                            android:id="@+id/CustomComment_pos_neg_ImageView"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_up" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CustomComment_linear_Neg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/CustomComment_NegText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="باتری بد" />

                        <ImageView
                            android:id="@+id/CustomComment_NegImageView"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_down" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/CustomComment_IDExit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="بستن"
                        android:textColor="#0d187b"
                        android:textSize="14dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Custom_Comment_linnear_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ProgressBar-->
                    <!--style="?android:progressBarStyleHorizontal"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="11dp"-->
                    <!--android:id="@+id/CustomComment_ProgressBar"-->
                    <!--android:progressDrawable="@drawable/drawable_progress"-->
                    <!--android:layout_weight="0.3"-->
                    <!--android:indeterminate="false"-->
                    <!--android:progress="90" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/CustomComment_TextProgressBar"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="0.7"-->
                    <!--android:text="نوآوری"-->
                    <!--android:textColor="#7e7c7c"-->
                    <!--android:textSize="11dp" />-->


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="#9c9c9c" />

                    <TextView
                        android:id="@+id/Commint_TextEdame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="ادامه مطلب"

                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>